<%= f.hidden_field :position %>
<div class="row" data-hook="admin_content_fragment_form_fields">
  <div class="col-md-8" data-hook="admin_content_fragment_form_left">
    <div class="form-group">
      <%= f.label :title %> <span class="required">*</span>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.error_message_on :title %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 12, class: 'form-control' %>
      <%= f.error_message_on :body %>
    </div>

    <div class="form-group">
      <%= f.label :style %>
      <%= f.text_area :style, rows: 12, class: 'form-control' %>
    </div>
  </div>

  <div class="col-md-4" data-hook="admin_content_fragment_form_right">

    <div class="form-group">
      <%= f.label 'Background image or video' %>
      <% if f.object.background_media.present? %>
        <p>
          <%= image_tag f.object.background_media.url(:thumb) %>
        </p>
      <% end %>
      <%= f.file_field :background_media, class: 'form-control' %>
    </div>

    <hr>

    <div class="form-group">
      <%= f.label 'Youtube Video ID' %>
      <%= f.file_field :youtube_video_id, class: 'form-control' %>
    </div>

    <hr>

    <h4>Size</h4>
    <div class="form-group">
      <%= f.label :fullpage do %>
        <%= f.check_box :fullpage, wrapper_html: { tag_name: 'span'} %>
        Fullscreen <br>
        <span class="text-muted">Fit content fragment to viewport height and width.</span>
      <% end %>
    </div>

    <hr>

    <h4>Content</h4>
    <div class="form-group">
      <%= f.label :box_around_content do %>
        <%= f.check_box :box_around_content %>
        Box around content
        <p class="text-muted"></p>
      <% end %>
    </div>


    <h4>Content Position</h4>
    <div class="well" id="position-select-wrapper">
      <div class="row">
        <div class="col-sm-4">
          <%= f.radio_button :content_position, 1 %>
          <%= f.radio_button :content_position, 4 %>
          <%= f.radio_button :content_position, 7 %>
        </div>
        <div class="col-sm-4">
          <%= f.radio_button :content_position, 2 %>
          <%= f.radio_button :content_position, 5 %>
          <%= f.radio_button :content_position, 8 %>
        </div>
        <div class="col-sm-4">
          <%= f.radio_button :content_position, 3 %>
          <%= f.radio_button :content_position, 6 %>
          <%= f.radio_button :content_position, 9 %>
        </div>
      </div>
    </div>

  </div>
</div>
